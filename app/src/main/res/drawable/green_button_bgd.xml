<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/darker_primary_color" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <stroke android:width="2dp" android:color="#FFFFFF" />
            <padding android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
            <corners android:radius="5dp" />
            <solid android:color="@color/primary_color" />
        </shape>
    </item>
    <item>
        <shape>
            <!-- <stroke android:width="1dp" android:color="@color/darker_primary_color" /> -->
            <padding android:left="@dimen/small_padding"
                android:top="@dimen/small_padding"
                android:right="@dimen/small_padding"
                android:bottom="@dimen/small_padding" />
            <corners android:radius="5dp" />
            <solid android:color="@color/light_primary_color" />
        </shape>
    </item>
</selector>