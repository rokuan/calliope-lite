<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/white_button_pressed"
        android:state_pressed="true" />
    <item android:drawable="@drawable/white_button_pressed"
        android:state_focused="true" />
    <item android:state_enabled="false">
        <shape>
            <padding android:left="@dimen/small_padding"
                android:top="@dimen/small_padding"
                android:right="@dimen/small_padding"
                android:bottom="@dimen/small_padding" />
            <corners android:radius="5dp" />
            <solid android:color="#EEEEEE" />
        </shape>
    </item>
    <item android:drawable="@drawable/white_button_default" />
</selector>