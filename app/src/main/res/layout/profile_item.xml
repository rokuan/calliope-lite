<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/profile_item"
    android:padding="@dimen/form_padding">
    <TextView
        android:id="@+id/profile_item_name"
        android:text="Profil par defaut"
        android:textColor="@drawable/profile_name_text"
        android:textStyle="bold"
        android:textSize="20sp"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/profile_item_code"
        android:text="default"
        android:layout_marginTop="@dimen/form_input_top_margin"
        android:textStyle="italic"
        android:textColor="@drawable/profile_identifier_text"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>